<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="10"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="7"
      >

    <video.paxra.com.videoconverter.views.FontTextViewGood
        android:id="@+id/text"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Aici la noi este SARATEANUL capatat caracoroci de lucru bla bla caci asta "
        android:visibility="invisible"
        android:textColor="@color/green"
        />

    <video.paxra.com.videoconverter.views.RingProgressBar
        android:id="@+id/progress_bar_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:max="100"
        app:ringColor="@android:color/darker_gray"
        app:ringProgressColor="@color/white"
        app:ringWidth="3dp"
        app:textColor="@color/white"
        app:textIsShow="true"
        app:textSize="22sp"
        app:style="STROKE"
        />

  </RelativeLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3"
      >

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_oval"
        android:padding="15dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/black_gray"
        android:textSize="22sp"
        />



  </RelativeLayout>

</LinearLayout>