<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical">

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/space">

        <video.paxra.com.videoconverter.views.PulsatorLayout
            android:id="@+id/pulsator1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            app:pulse_color="@color/yellow"
            app:pulse_count="4"
            app:pulse_duration="7000"
            app:pulse_interpolator="Linear"
            app:pulse_repeat="0"
            app:pulse_startFromScratch="false">


            <ImageView
                android:id="@+id/action_import"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_video"
                android:padding="23dp"
                android:background="@drawable/btn_circle_back"/>


        </video.paxra.com.videoconverter.views.PulsatorLayout>

        <video.paxra.com.videoconverter.views.FontTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Din Librărie"
            android:layout_below="@id/pulsator1"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/space"
        android:layout_marginTop="20dp">

        <video.paxra.com.videoconverter.views.PulsatorLayout
            android:id="@+id/pulsator2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            app:pulse_color="@color/yellow"
            app:pulse_count="4"
            app:pulse_duration="7000"
            app:pulse_interpolator="Linear"
            app:pulse_repeat="0"
            app:pulse_startFromScratch="true">


            <ImageView
                android:id="@+id/action_record"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_phone"
                android:padding="23dp"
                android:background="@drawable/btn_circle_back"/>
        </video.paxra.com.videoconverter.views.PulsatorLayout>

        <video.paxra.com.videoconverter.views.FontTextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Înregistrează Video"
            android:layout_below="@id/pulsator2"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>
</RelativeLayout>